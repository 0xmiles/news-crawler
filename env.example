# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model Configuration
AI_PROVIDER=anthropic
AI_MODEL=claude-3-sonnet-20240229
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Database Configuration (Optional - only needed for local storage)
# DATABASE_URL=sqlite:///crawler.db
# For PostgreSQL: postgresql://user:password@localhost:5432/crawler
# DATABASE_ECHO=false
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Crawler Configuration
USER_AGENT=NewsCrawler/1.0.0
REQUEST_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RESPECT_ROBOTS_TXT=true

# YouTube Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_MAX_LENGTH=3600
YOUTUBE_TRANSCRIPT_LANG=en

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here

# Storage Configuration
STORAGE_PATH=./data
MAX_CONTENT_LENGTH=1000000
ENABLE_COMPRESSION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=crawler.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
